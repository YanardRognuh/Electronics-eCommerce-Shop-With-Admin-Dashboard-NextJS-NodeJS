{
  "name": "electronic-ecommerce-shop-with-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup-env.js",
    "dev": "prisma generate && next dev",
    "server": "cd server && node app.js",
    "server:test": "cross-env NODE_ENV=test CYPRESS_TEST=true node server/app.js",
    "test:all": "concurrently \"npm run server:test\" \"npm run dev\" \"npm run test:e2e\"",
    "build": "prisma generate && next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "test:e2e": "cypress run",
    "test:e2e:headless": "cypress run --headless",
    "test:e2e:headed": "cypress run --headed",
    "test:auth": "cypress run --spec 'cypress/e2e/user/01-authentication.cy.ts'",
    "test:homepage": "cypress run --spec 'cypress/e2e/user/02-homepage.cy.ts'",
    "test:browsing": "cypress run --spec 'cypress/e2e/user/03-product-browsing.cy.ts'",
    "test:product": "cypress run --spec 'cypress/e2e/user/04-product-detail.cy.ts'",
    "test:cart": "cypress run --spec 'cypress/e2e/user/05-cart.cy.ts'",
    "test:checkout": "cypress run --spec 'cypress/e2e/user/06-checkout.cy.ts'",
    "test:user": "cypress run --spec 'cypress/e2e/user/*.cy.ts'",
    "test:admin": "cypress run --spec 'cypress/e2e/admin/*.cy.ts'",
    "test:ci": "start-server-and-test dev http://localhost:3000 cypress:run",
    "test:smoke": "cypress run --spec 'cypress/e2e/user/01-authentication.cy.ts,cypress/e2e/user/02-homepage.cy.ts'",
    "cypress:verify": "cypress verify",
    "cypress:info": "cypress info",
    "cypress:version": "cypress version",
    "test:record": "cypress run --record --key YOUR_RECORD_KEY",
    "test:parallel": "cypress run --parallel --record --key YOUR_RECORD_KEY",
    "test:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "test:debug": "cypress open --config watchForFileChanges=true",
    "test:no-video": "cypress run --config video=false"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@prisma/client": "^6.16.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/react-slick": "^0.23.13",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "dompurify": "^3.0.8",
    "express-fileupload": "^1.5.0",
    "express-rate-limit": "^8.1.0",
    "flowbite-react": "^0.7.2",
    "nanoid": "^5.0.6",
    "next": "^15.5.3",
    "next-auth": "^4.24.13",
    "react": "^18.3.1",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.0.1",
    "react-slick": "^0.30.2",
    "slick-carousel": "^1.8.1",
    "svgmap": "^2.10.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.1"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.3.3",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.0.1",
    "baseline-browser-mapping": "^2.9.4",
    "cross-env": "^10.1.0",
    "cypress": "^15.7.1",
    "daisyui": "^4.7.2",
    "eslint": "^8",
    "eslint-config-next": "^15.5.3",
    "postcss": "^8",
    "prisma": "^6.16.1",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.9.2"
  }
}
